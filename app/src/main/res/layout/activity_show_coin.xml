<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.hamiss.coinpocket.ShowCoin"
    android:background="#123"

    >


    <module.MyTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="price:"


        android:textAlignment="center"
        android:textColor="#fff764"
        android:textSize="15sp"
        android:layout_above="@+id/change24_txt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <module.MyTextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:textColor="#009586"
        android:textSize="25sp"

        android:textAlignment="center"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <module.MyTextView
        android:id="@+id/ava_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/change7_txt"
        android:layout_below="@+id/change7_txt"
        android:layout_marginTop="58dp"
        android:text="Available suuply:"
        android:textAlignment="textStart"
        android:textColor="#e6eceb"
        android:textSize="15sp" />


    <module.MyTextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price:"
        android:textColor="#e6eceb"
        android:textSize="15sp"
        android:textAlignment="center"

        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_alignStart="@+id/change24_txt" />

    <module.MyTextView
        android:id="@+id/change24_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change(24h):"
        android:textAlignment="center"
        android:textColor="#e6eceb"

        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/share_btn" />


    <module.MyTextView
        android:id="@+id/myTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/share_btn"
        android:text="change(24h):"

        android:textAlignment="center"
        android:textColor="#e6eceb"
        android:textSize="15sp" />

    <module.MyTextView
        android:id="@+id/change7_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change(7d):"
        android:textAlignment="textStart"
        android:textColor="#e6eceb"
        android:textSize="15sp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/change24_txt"
        android:layout_alignStart="@+id/change24_txt" />

    <ImageButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_action_name" />

    <module.MyTextView
        android:id="@+id/change24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/change24_txt"
        android:layout_alignBottom="@+id/change24_txt"
        android:layout_alignEnd="@+id/price" />

    <module.MyTextView
        android:id="@+id/change7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ava_txt"
        android:layout_alignEnd="@+id/change24"
        android:text="TextView" />

    <module.MyTextView
        android:id="@+id/ava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ava_txt"
        android:layout_alignEnd="@+id/change7"
        android:textColor="#6eb5fb"
        android:text="TextView" />

</RelativeLayout>
